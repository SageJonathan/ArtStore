generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ArtPiece {
  id              Int      @id @default(autoincrement())
  title           String
  medium          String
  price           Float
  isVertical      Boolean
  size            String
  weight          String   
  shippingHeight  String   
  shippingLength  String   
  shippingWidth   String   
  shippingWeight  String   
  inStock         Boolean @default(true)
  imageUrlFront   String
  imageUrlBack    String
  clientId        Int?
  client          ClientData? @relation(fields: [clientId], references: [id])
}



model ClientData {
  id                Int    @id @default(autoincrement())
  fullName          String
  email             String  @unique
  mobileNumber      String ?
  city              String
  country           String
  line1             String
  line2             String?
  postalCode        String
  stateOrProvince   String
  artPieces        ArtPiece[] 
}


