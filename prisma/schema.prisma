generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ArtPiece {
  id              Int     @id @default(autoincrement())
  title           String
  //remoe description
  description     String
  medium          String
  price           Float
  isVertical      Boolean
  size            String
  weight          String
  inStock         Boolean @default(true)
  imageUrlFront   String
  imageUrlBack    String
  clientId        Int?
  client          ClientData? @relation(fields: [clientId], references: [id])
}

model ClientData {
  id               Int     @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String  @unique
  //mobile number is ? 
  mobileNumber     String
  shippingAddress  String
  paymentAddress   String
  recurringClient  Boolean @default(false)
  artPieces        ArtPiece[] 
  // add array of payment methods
}
