generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ArtPiece {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  // Add sizing
  price       Float
  // Add boolean check for horintal or vertical
  imageUrl    String? 
  // add back img url
  inStock     Boolean  @default(true) 
  buyerName   String?  
  buyerEmail  String?  @unique 
   buyerAddress String? 
  
}

